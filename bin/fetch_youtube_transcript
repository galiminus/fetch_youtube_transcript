#!/usr/bin/env ruby

require 'fetch_youtube_transcript'
require 'optparse'

options = {}
optparse = OptionParser.new do |opts|
  opts.banner = "Usage: fetch_youtube_transcript -v video_id -o output"

  opts.on("-v", "--video VIDEO_ID", "Video id from Youtube") do |input|
    options[:input] = input
  end

  opts.on("-o", "--output PATH", "Path where the English transcript file will be saved") do |output|
    options[:output] = output
  end
end

begin
  optparse.parse!

  # from https://stackoverflow.com/a/2149183
  mandatory = [:input, :output]
  missing = mandatory.select{ |param| options[param].nil? }
  unless missing.empty?
    raise OptionParser::MissingArgument.new(missing.join(", "))
  end

  FetchYoutubeTranscript.new(options[:video]).download_transcript_to(options[:output])
rescue OptionParser::InvalidOption, OptionParser::MissingArgument
  puts $!.to_s
  puts optparse
  exit 1
end
